# Example secrets file for ESPHome Tuya Smart Plug
# Copy this file to 'secrets.yaml' and fill in your credentials
# The secrets.yaml file is ignored by git to protect your credentials

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Optional: Static IP Configuration
# Uncomment and configure if you want a static IP
# static_ip: "192.168.1.100"
# gateway: "192.168.1.1"
# subnet: "255.255.255.0"
# dns1: "192.168.1.1"
# dns2: "8.8.8.8"

# Optional: Fallback Access Point
# Uncomment to customize the fallback AP
# ap_ssid: "TuyaPlug-Fallback"
# ap_password: "ConfigMe123"

# Optional: API Encryption Key
# Generate with: esphome run tuya_plug.yaml
# api_encryption_key: "your-32-character-key-here"

# Optional: OTA Password
# Uncomment to add password protection for OTA updates
# ota_password: "your-ota-password"

# Optional: Web Server Authentication
# Uncomment to add basic auth to web interface
# web_username: "admin"
# web_password: "your-web-password"
